<table class="table mt-3">
  <thead>
    <tr>
      <th>ISBNコード</th>
      <th>書名</th>
      <th>価格</th>
      <th>出版社</th>
      <th>刊行日</th>
      <th>ダウンロード</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr class="<%= cycle("","", "table-primary") %>">
        <td><%= book.isbn %></td>
        <td><%= book.title %></td>
        <td><%= number_to_currency(book.price, unit: "円", precision: 0, format: "%n%u") %></td>
        <td><%= book.publisher %></td>
        <td><%= book.published %></td>
        <td><%= book.dl ? "可能" : "不可" %></td>
      </tr>
    <% end %>
  </tbody>
</table>